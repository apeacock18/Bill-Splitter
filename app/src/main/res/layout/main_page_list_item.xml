<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:padding="6dip" >

    <TextView
        android:id="@+id/summaryItemPayer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/summaryItemPayer"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="John payed $10"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/summaryItemReceivers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="Paid to"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/summaryItemDate"
        android:layout_toStartOf="@+id/summaryItemDate"
        android:ellipsize="end"
        android:lines="1" />

    <TextView
        android:id="@+id/summaryItemDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@id/summaryItemReceivers"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Description"
        android:textSize="14sp"
        android:layout_alignParentLeft="false"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/summaryItemDate"
        android:layout_alignBottom="@+id/summaryItemPayer"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="5/2/2016 10:55 AM"
        android:gravity="right" />

</RelativeLayout> 